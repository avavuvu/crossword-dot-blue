{
  "$ref": "#/definitions/mini",
  "definitions": {
    "mini": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object",
          "properties": {
            "author": {
              "type": "string"
            },
            "date": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            },
            "name": {
              "type": "string"
            },
            "difficulty": {
              "type": "number",
              "exclusiveMinimum": 0,
              "maximum": 5
            },
            "isRebus": {
              "type": "boolean",
              "default": false
            },
            "characterSet": {
              "type": "string",
              "enum": [
                "a-to-z",
                "numbers",
                "special"
              ],
              "default": "a-to-z"
            },
            "id": {
              "type": "string"
            }
          },
          "required": [
            "author",
            "date",
            "difficulty",
            "id"
          ],
          "additionalProperties": false
        },
        "content": {
          "type": "object",
          "properties": {
            "height": {
              "type": "number",
              "minimum": 4
            },
            "width": {
              "type": "number",
              "minimum": 4
            },
            "grid": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "links": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "clues": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "clue": {
                    "type": "string"
                  },
                  "coords": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  },
                  "id": {
                    "type": "string"
                  },
                  "isHorizontal": {
                    "type": "boolean"
                  },
                  "word": {
                    "type": "string"
                  },
                  "wordBoundaries": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "required": [
                  "clue",
                  "coords",
                  "id",
                  "isHorizontal",
                  "word"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": [
            "height",
            "width",
            "grid",
            "clues"
          ],
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "metadata",
        "content"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}