---
import "../app.css"

import Head from "@/Head.svelte"

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} â€“ Crossword Dot Blue</title>
    
</head>
<body>
    <slot></slot>
    <Head client:only="svelte"></Head>
    <script is:inline>
        const savedOptions = localStorage.getItem("options")
        if(savedOptions) {
            const options = JSON.parse(savedOptions)

            document.documentElement.setAttribute('data-theme', options.Theme.setting);
        }
    </script>
</body>
</html>